@model ToDoListManagement.Entity.ViewModel.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
    string isAdmin = User.IsInRole("Admin") ? "" : "readonly";
}

<div class="h-100 m-2">

    <div class="fs-1">Profile</div>

    <div class="row m-0 p-0 h-50 g-2">
        <div class="col-md-3 h-100 mt-2 p-0">
            <div class="card card-primary card-outline h-100 d-flex align-items-center justify-content-center">
                <div class="card-body box-profile d-flex justify-content-center flex-column align-items-center">
                    <h3 class="profile-username text-center">@Model.Name</h3>
                    <p class="text-muted text-center">@Model.Email</p>
                </div>
            </div>
        </div>

        <div class="col-md-9 m-0 p-0 h-100 mt-2" style="background-color: #0f4088;">
            <form asp-action="UpdateProfile" method="post" class="p-3 d-flex justify-content-center flex-column align-items-center h-100">
                <input type="hidden" asp-for="EmployeeId" value="@Model.EmployeeId" />

                <div class="form-floating mb-3 w-50">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Name" asp-for="Name"
                        value="@Model.Name">
                    <label for="floatingInput">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 w-50">
                    <input type="email" class="form-control" id="floatingInput" placeholder="Email" asp-for="Email"
                        value="@Model.Email" style="cursor: not-allowed;" readonly>
                    <label for="floatingInput">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 w-50">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Phone Number" asp-for="PhoneNumber"
                        value="@Model.PhoneNumber">
                    <label for="floatingInput">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 w-50">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Role" asp-for="Role"
                        style="cursor: not-allowed;" value="@Model.Role" readonly>
                    <label for="floatingInput">Role</label>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end me-3">
                    <button type="submit" class="btn bg-white me-2" style="color:#0f4088 ;">Update</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn border-white text-white">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>